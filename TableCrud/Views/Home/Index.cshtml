@model TableCrud.Models.Employee
@{
    ViewBag.Title = "Home Page";
}


@using (Html.BeginForm("Index", "Home", new { id = Model.RowKey }, FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Employee Form</legend>
        <ol>
            <li>
                <label>First Name:</label>&nbsp;
                <input type="text" name="FirstName" required="required" value="@Model.FirstName" required placeholder="First Name" />
            </li><br />
            <li>
                <label>Last Name:</label>&nbsp;&nbsp;
                <input type="text" name="LastName" required="required" value="@Model.LastName" required  placeholder="Last Name"/>
            </li><br />
            <li>
                <label>Email:</label>&nbsp;&nbsp;
                <input type="email" name="Email" value="@Model.Email" style="margin-left:3%" required  placeholder="Email"/>
            </li><br />
            <li >
                <label>Mobile No:</label>&nbsp;&nbsp;&nbsp;
                <input type="text" name="Mobile" pattern="[0-9]{10,14}" required placeholder="Mobile Number" value="@Model.Mobile">
            </li><br />
                 <li>
                     <label>Address:</label>&nbsp;&nbsp;&nbsp;&nbsp;
                     <textarea name="Address" rows="5" value="@Model.Address" placeholder="Address" style="vertical-align:middle" required>@Model.Address</textarea>
                 </li><br />
            <li>
                <label style="margin-right:15px;">Select Resume </label>
                <input type="file" name="Path" value="@Model.Path" required="required" />

            </li>
        </ol><br />
        <input type="submit" value="Submit" />
    </fieldset>
}  
<br />
<div>
    @Html.ActionLink("Back to List", "Get")
</div>